{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["libs/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "/node_modules",
    "/dist",
    "/example",
    "/src",
    "/__test__"
  ]
}
